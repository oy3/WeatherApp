<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent">


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:text="Add city and country:"
            android:layout_margin="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/error_mssg"
            android:layout_marginBottom="40dp"/>

    <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/error_mssg"
            android:textColor="@color/red"
            app:layout_constraintStart_toStartOf="@id/textView"
            app:layout_constraintBottom_toTopOf="@id/city_layout"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

    <android.support.design.widget.TextInputLayout
            android:id="@+id/city_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:errorEnabled="true"
            android:theme="@style/TextInputLayoutAppearance"
            app:layout_constraintBottom_toTopOf="@+id/country_layout">

        <android.support.design.widget.TextInputEditText
                android:id="@+id/cityTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:hint="Input city here"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:id="@+id/country_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/addBtn"
            android:layout_marginBottom="40dp"
            app:errorEnabled="true"
            android:theme="@style/TextInputLayoutAppearance">

        <android.support.design.widget.TextInputEditText
                android:id="@+id/countryTxt"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="top"
                android:hint="Input country here"/>

    </android.support.design.widget.TextInputLayout>

    <Button
            android:text="Add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/addBtn"
            android:layout_margin="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/black"
            android:textColor="@color/white"/>


</android.support.constraint.ConstraintLayout>