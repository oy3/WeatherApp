<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            tools:text="Greeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/greeting"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"/>
    <TextView
            android:text="Mujeeb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            app:layout_constraintStart_toEndOf="@id/greeting"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="50dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
    <TextView
            tools:text="N0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/degreeNo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/greeting"
            android:textSize="100sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginStart="50dp"
            android:layout_marginTop="40dp"/>
    <TextView
            android:text="Celcius"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/degree"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/degreeNo"
            android:layout_marginStart="50dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="25sp"/>

    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/ic_launcher_background"
            android:id="@+id/weatherIcon"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <View android:layout_width="match_parent"
          android:layout_height="0dp"
          android:id="@+id/view2"
          android:layout_marginTop="30dp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/degree"
          android:background="@color/black"/>

    <TextView
            tools:text="Day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/day"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/view2"
            android:layout_marginTop="30dp"
            android:layout_marginStart="50dp"/>
    <TextView
            android:text="Sunrise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sunriseTxt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/view2"
            android:layout_marginStart="50dp"
            android:layout_marginTop="110dp"
            android:textColor="@color/gray"
            android:textStyle="bold"/>
    <TextView
            tools:text="06.11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sunrise"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="25sp"
            app:layout_constraintTop_toBottomOf="@+id/sunriseTxt"
            app:layout_constraintStart_toStartOf="@+id/sunriseTxt"/>
    <TextView
            android:text="Wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/windTxt"
            android:textColor="@color/gray"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/sunriseTxt"
            app:layout_constraintTop_toTopOf="@id/view2"
            android:layout_marginStart="90dp"
            android:layout_marginTop="110dp"/>
    <TextView
            tools:text="33 n/s SW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wind"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="@id/windTxt"
            app:layout_constraintTop_toBottomOf="@id/windTxt"/>
    <TextView
            android:text="Sunset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sunsetTxt"
            android:textStyle="bold"
            android:textColor="@color/gray"
            app:layout_constraintStart_toStartOf="@+id/sunriseTxt"
            app:layout_constraintTop_toBottomOf="@+id/sunrise"
            android:layout_marginTop="30dp"/>
    <TextView
            tools:text="18.05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sunset"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="@+id/sunsetTxt"
            app:layout_constraintTop_toBottomOf="@+id/sunsetTxt"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_my_calendar"
            android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/date"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="50dp"/>

    <TextView
            tools:text="Date Month Year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@id/imageView2"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="50dp"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_mylocation"
            android:id="@+id/locationImg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="150dp"
            android:layout_marginBottom="50dp"/>

    <TextView
            tools:text="Lagos, Nigeria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/location"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@id/locationImg"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="50dp"
            android:layout_marginStart="10dp"/>

</android.support.constraint.ConstraintLayout>